# Server Configuration
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
# Make sure your account has sufficient credits
ANTHROPIC_API_KEY=your_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
# Use 'common' for multi-tenant apps, or your specific tenant ID

# Resend Email Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
# Use your verified domain email, or 'onboarding@resend.dev' for testing
RESEND_FROM_EMAIL=StreamLine <noreply@yourdomain.com>

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/streamline
